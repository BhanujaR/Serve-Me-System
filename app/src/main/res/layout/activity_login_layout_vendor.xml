<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/neworder"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="200dp"
        android:text="0"
        android:textColor="#FF9800"
        android:textSize="90dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="325dp"
        android:fontFamily="@font/aldrich"
        android:paddingLeft="10dp"
        android:text="New orders"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderserved"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:text="0"
        android:textColor="#FF9800"
        android:textSize="100dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:paddingBottom="60dp"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="250dp"
        android:text="Orders Served"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/paymentrecv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="375dp"
        android:text="0"
        android:textColor="#FF9800"
        android:textSize="100dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:fontFamily="@font/aldrich"
        android:paddingBottom="60dp"
        android:layout_marginTop="500dp"
        android:text="Total Payment"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pendingorders"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:fontFamily="@font/aldrich"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="250dp"
        android:text="0"
        android:textColor="#FF9800"
        android:textSize="100dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:fontFamily="@font/aldrich"
        android:paddingBottom="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="250dp"
        android:text="Pending Payments"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/VendClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="600dp"
        android:background="#FF9800"
        android:fontFamily="@font/aldrich"
        android:text="Inc Orders"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>